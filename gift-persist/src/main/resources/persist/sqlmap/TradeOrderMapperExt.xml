<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.datai.gift.persist.mapper.TradeOrderMapperExt">
    <select id="findAndLockTradeOrderByPayInfoId" parameterType="java.lang.String" resultType="cn.datai.gift.persist.po.TradeOrder">
        SELECT * from TRADE_ORDER WHERE INCOME_PAY_INFO=#{payInfoId} FOR UPDATE
    </select>

    <select id="selectByPrimaryKeyAndLock" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        TRADE_ORDER
        WHERE
        TRADE_ORDER_ID = #{id}
        FOR UPDATE
    </select>
</mapper>